import java.util.Scanner;

public class App {
    public static void main(String[] args) throws Exception {

        Scanner scan = new Scanner(System.in);
        double input;

        do {
            System.out.println("Select the kind of shape\n 1-Circle\n 2-Square\n 3-Rectangle\n 4-Triangle\n");
            int shapeOpt = scan.nextInt();

            if (shapeOpt == 1) {
                Circle circleObject = new Circle();
                circleObject.simpleMessage();

            } else if (shapeOpt == 2) {
                Square squareObject = new Square();
                squareObject.simpleMessage();

            } else if (shapeOpt == 3) {
                Rectangle recObject = new Rectangle();
                recObject.simpleMessage();
            } else if (shapeOpt == 4) {
                Triangle triObject = new Triangle();
                triObject.simpleMessage();
            }
            

            
            System.out.println("Do you want to start again? (1-yes 2-no): ");
            input = scan.nextInt();

        } while (input == 1);

        System.out.println("Program ended. Thank you for using it!");
        scan.close();
    }

}


// CIRCLE
import java.util.Scanner;

public class Circle {
    Scanner scan = new Scanner(System.in);

    public void simpleMessage() {
        System.out.println(" Select the calculation\n 1-Area\n 2-Perimeter\n 3-both\n");
        int calOpt = scan.nextInt();

        if (calOpt == 1) {
            System.out.println("enter the radius of the circle");
            double r = scan.nextDouble();
            double aoc = Math.PI * r * r;
            System.out.println("Area " + aoc);
        } else if (calOpt == 2) {
            System.out.println("enter the radius of the circle");
            double r = scan.nextDouble();
            double poc = Math.PI * r * 2;
            System.out.println("Perimeter " + poc);
        } else if (calOpt == 3) {
            System.out.println("enter the radius of the circle ");
            double r = scan.nextDouble();
            double poc = Math.PI * r * 2;
            double aoc = Math.PI * r * r;
            System.out.println("1-Perimeter " + poc);
            System.out.println("2-Area " + aoc);

        }

    }

}

//SQUARE
import java.util.Scanner;

public class Square {
    Scanner scan = new Scanner(System.in);

    public void simpleMessage() {
        System.out.println(" Select the Calculation\n 1-Area\n 2-Perimeter\n 3-both\n");
        int calOpt = scan.nextInt();

        if (calOpt == 1) {
            System.out.println("Enter a side");
            double a = scan.nextInt();
            double aos = a * a;
            System.out.println("Area " + aos);
        } else if (calOpt == 2) {
            System.out.println("Enter a side");
            double a = scan.nextInt();
            double pos = 4 * a;
            System.out.println("Perimeter " + pos);
        } else if (calOpt == 3) {
            System.out.println("Enter a side");
            double a = scan.nextInt();
            double pos = 4 * a;
            double aos = a * a;
            System.out.println("Perimeter " + pos);
            System.out.println("Area " + aos);
        }

    }

}


//RECTANGLE
import java.util.Scanner;

public class Rectangle{
    Scanner scan = new Scanner(System.in);

    public void simpleMessage() {
        System.out.println(" select the calculation\n 1-Area\n 2-Perimeter\n 3-both\n");
        int calOpt = scan.nextInt();

        if (calOpt == 1) {
            System.out.println("Enter the length");
            double l = scan.nextInt();
            System.out.println("Enter the breadth");
            double b = scan.nextInt();
            double aor = l * b;
            System.out.println("Area " + aor);
        } else if (calOpt == 2) {
            System.out.println("Enter the length");
            double l = scan.nextInt();
            System.out.println("Enter the breadth");
            double b = scan.nextInt();
            double por = 2 * l + b;
            System.out.println("Perimeter " + por);
        } else if (calOpt == 3) {
            System.out.println("Enter the length");
            double l = scan.nextInt();
            System.out.println("Enter the breadth");
            double b = scan.nextInt();
            double por = 2 * l + b;
            double aor = l * b;
            System.out.println("Area " + aor);
            System.out.println("Perimeter " + por);

        }
    }

}

//TRIANGLE
import java.util.Scanner;

public class Triangle {
    Scanner scan = new Scanner(System.in);

    public void simpleMessage() {
        System.out.println("select the calculation\n 1-Area\n 2-Perimeter\n 3-both\n");
        int calOpt = scan.nextInt();

        if (calOpt == 1) {
            System.out.println("Enter the height");
            double h = scan.nextInt();
            System.out.println("Enter the base");
            double b = scan.nextInt();
            double aot = h * b / 2;
            System.out.println("Area " + aot);
        } else if (calOpt == 2) {
            System.out.println("Enter the first side");
            double a = scan.nextInt();
            System.out.println("Enter the second side");
            double b = scan.nextInt();
            System.out.println("Enter the third side");
            double c = scan.nextInt();
            double pot = a + b + c;
            System.out.println("Perimeter " + pot);

        } else if (calOpt == 3) {
            System.out.println("Enter the first side");
            double a = scan.nextInt();
            System.out.println("Enter the second side");
            double b = scan.nextInt();
            System.out.println("Enter the third side");
            double c = scan.nextInt();
            System.out.println("Enter the height");
            double h = scan.nextInt();
            System.out.println("Enter the base");
            double d = scan.nextInt();
            double pot = a + b + c;
            double aot = h * d / 2;
            System.out.println("Perimeter " + pot);
            System.out.println("Area " + aot);

        }
    }

}


